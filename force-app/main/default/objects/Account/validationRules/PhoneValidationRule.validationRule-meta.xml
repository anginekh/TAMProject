<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PhoneValidationRule</fullName>
    <active>true</active>
    <errorConditionFormula>OR (
AND ( Mobil__c != null, 
NOT(REGEX(Mobil__c, &quot;\\+[1-9]{1}[0-9]{1} [0-9]{3} [0-9]{3} [0-9]{3} [0-9]{1,2}&quot;))),

AND (  Phone  != null, 
NOT(REGEX(Phone, &quot;\\+[1-9]{1}[0-9]{1} [0-9]{3} [0-9]{3} [0-9]{3} [0-9]{1,2}&quot;))),

AND (  KontaktpersonFestnetz__c  != null, 
