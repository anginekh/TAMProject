<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>MV_KaltmieteErhoehungsDatumMandatory</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISCHANGED(KaltmieteNeu__c), NOT(ISCHANGED( KMEhDatum__c )) )</errorConditionFormula>
    <errorMessage>Wenn Kaltmiete Neu verändert wird, muss ein Kaltmietenerhöhung Datum eingetragen werden</errorMessage>
</ValidationRule>
